<h1>New Promotion</h1>

<%= form_with model: @promotion do |form| %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
        <% @promotion.errors.full_messages_for(:name).each do |message| %>
        <%= message %>
        <% end %>
    </div>

    <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>

    <div>
        <%= form.label :code %>
        <%= form.text_field :code %>
        <% @promotion.errors.full_messages_for(:code).each do |message| %>
        <%= message %>
        <% end %>
    </div>

    <div>
        <%= form.label :discount_rate %>
        <%= form.number_field :discount_rate %>
        <% @promotion.errors.full_messages_for(:discount_rate).each do |message| %>
        <%= message %>
        <% end %>
    </div>

    <div>
        <%= form.label :coupon_quantity %>
        <%= form.number_field :coupon_quantity %>
        <% @promotion.errors.full_messages_for(:coupon_quantity).each do |message| %>
        <%= message %>
        <% end %>
    </div>

    <div>
        <%= form.label :expiration_date %>
        <%= form.date_field :expiration_date %>
        <% @promotion.errors.full_messages_for(:expiration_date).each do |message| %>
        <%= message %>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>