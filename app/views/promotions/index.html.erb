<h1>Listed Promotions</h1>

<% flash.each do |type, msg| %>
    <%= msg %>
<% end %>

<p><%= link_to "Voltar", root_path %></p>
<p><%= link_to "Registrar uma promoção", new_promotion_path %></p>

<table style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Discount</th>
        </tr>
    </thead>
    
    <% @promotions.each do |promotion| %>
        <tr>
            <td><%= link_to promotion.name, promotion %></td>
            <td><%= promotion.description %></td>
            <td><%= number_to_percentage(promotion.discount_rate, precision: 2, separator: ',')  %></td>
        </tr>
    <% end %>
</table>