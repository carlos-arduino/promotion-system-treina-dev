<%= form_with model: category do |form| %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
        <% @promotion.errors.full_messages_for(:name).each do |message| %>
        <%= message %>
        <% end %>
    </div>

    <div>
        <%= form.label :code %>
        <%= form.text_field :code %>
        <% @promotion.errors.full_messages_for(:code).each do |message| %>
        <%= message %>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>